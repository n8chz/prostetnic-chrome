{
 "name" : "Persistent Highlighter",
 "version" : "0.0.0",
 "description" : "A watered-down port of Prostetnic Highlighter",
 "permissions": [
  "contextMenus",
  "activeTab",
  "storage",
  "unlimitedStorage"
 ],
 "icons": {
  "16": "hiliter.png"
 },
 "background": {
   "scripts": ["menu.js"]
 },
 "content_scripts": [
  {
   "matches": ["<all_urls>"],
   "js": ["lib.js", "rehilite.js"]
  }
 ],
 "browser_action": {
  "default_icon": {
  // "Gnome-searchtool" by David Vignoni -
  // http://ftp.gnome.org/pub/GNOME/sources/gnome-themes-extras/0.9/gnome-themes-extras-0.9.0.tar.gz.
  // Licensed under LGPL via Wikimedia Commons -
  // https://commons.wikimedia.org/wiki/File:Gnome-searchtool.svg#/media/File:Gnome-searchtool.svg
   "19": "search19.png",
   "38": "search.png"
  },
  "default_title": "Search for words in previous highlights",
  "default_popup": "popup.html"
 },
 "manifest_version": 2
}

